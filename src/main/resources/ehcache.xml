<ehcache:config
        xmlns:ehcache="http://www.ehcache.org/v3"
        xmlns:jcache="http://www.ehcache.org/v3/jsr107">

    <ehcache:cache alias="customer">
        <ehcache:expiry>
            <ehcache:ttl unit="minutes">5</ehcache:ttl>
        </ehcache:expiry>
        <ehcache:heap>200</ehcache:heap>
    </ehcache:cache>

    <ehcache:cache alias="book">
        <ehcache:expiry>
            <ehcache:ttl unit="minutes">5</ehcache:ttl>
        </ehcache:expiry>
        <ehcache:heap>200</ehcache:heap>
    </ehcache:cache>

</ehcache:config>